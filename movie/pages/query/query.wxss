.search{
  display: flex;
  padding-left: 20px;
  padding-right: 20px;
  font-size: 14px;
}
.search button{
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10rpx;
  border-left: 0;
  background-color: #dd5e0e;
  color:#fff;
  text-shadow: #000 0 1px 0;
  font-size: 14px;
}
.search input{
  width: 60%;
  padding-left:10px;
  height: 60rpx;
  box-shadow: inset 0 0 10px #ccc;
  color:black;
  background: #eee;
  line-height: 60rpx;
  border-radius: 5px;
}
.inputShow{
  display: inline-block;
  padding-left: 20px;
  font-size: 14px;
  text-align: center;
  padding-top: 10px;
}